<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0" author="alibi">
        <sql>
            CREATE SCHEMA IF NOT EXISTS liquibase;
        </sql>
    </changeSet>


    <changeSet id="1" author="alibi">
        <sql>
            CREATE SCHEMA IF NOT EXISTS coworking_service;
        </sql>
    </changeSet>

    <changeSet id="2" author="alibi">
        <createSequence schemaName="coworking_service" sequenceName="user_id_seq"/>
        <createSequence schemaName="coworking_service" sequenceName="workspace_id_seq"/>
        <createSequence schemaName="coworking_service" sequenceName="conference_room_id_seq"/>
        <createSequence schemaName="coworking_service" sequenceName="booking_id_seq"/>
    </changeSet>

    <changeSet id="3" author="alibi">
        <createTable tableName="user" schemaName="coworking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="alibi">
        <createTable tableName="workspace" schemaName="coworking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="available" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="alibi">
        <createTable tableName="conference_room" schemaName="coworking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="available" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="alibi">
        <createTable tableName="booking" schemaName="coworking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="resource_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_booking_user"
                                 baseTableSchemaName="coworking_service" baseTableName="booking"
                                 baseColumnNames="user_id"
                                 referencedTableSchemaName="coworking_service" referencedTableName="user"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
